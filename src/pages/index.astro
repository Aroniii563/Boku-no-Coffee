---
import Layout from '../layouts/Layout.astro';
import Fondo from "../img/logotipo.png"

---

<Layout title="Boku no Coffee">
	<main>
		<section id="inicio">
			<div class="present">
				<img src={Fondo.src} alt="fondo">
			</div>
			<h1>Bienvenido</h1>
		</section>
	</main>
</Layout>

<style>

	@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

	main{
		display: flex;
		justify-content: center;
		width: 100%;
	}

	.present img{
		width: 70%;
		filter: opacity(50%);
		position: relative;
		z-index: 0;
		animation: up 2.5s infinite ease-out;
		transition: scale  2s ease-out;
	}

	@keyframes up {
		0%{
			translate: 0 -10px;
		}
		25%{
			translate: 0 -20px;
		}
		50%{
			translate: 0 -25px;
		}
		75%{
			translate: 0 -20px;
		}
		100%{
			translate: 0 -10px;
		}
	}

	#inicio h1{
		position: absolute;
		top: 40%;
		left: 25%;
		color: white;
		font-size: 150px;
		animation: roll 3s infinite ease-in;
	}

	@keyframes roll{
		0%{
			filter: drop-shadow(1px 2px 10px aqua);
		}
		25%{
			filter: drop-shadow(2px 5px 10px #725fd1);
		}
		50%{
			filter: drop-shadow(1px 2px 10px violet);
		}
		75%{
			filter: drop-shadow(1px 2px 10px pink);
		}
		100%{
			filter: drop-shadow(1px 2px 10px #f8cc85);
		}
	}

</style>
