---
import Layout from "../layouts/Layout.astro";
import Fondo from "../img/logotipo.png";
import Contacto from "./contacto.astro";
import Coca from "../img/bebidas/coca-cola.png";
---

<Layout title="Bebidas">
    <main>
        <section id="select">
            <button><a href="#refrescos">Refrescos</a></button>
            <button><a href="#te">Té</a></button>
            <button><a href="#batidos">Batidos</a></button>
            <button><a href="#alcohol">Alcohol</a></button>
            <button><a href="#agua">Agua</a></button>
        </section>
        <section id="selection">
            <div class="present">
				<img src={Fondo.src} alt="fondo">
			</div>
			<h1 class="visible">Bebidas</h1>
            <div>
                <h1 id="refrescos">Refrescos</h1>
                <article>
                    <h2>Coca-Cola:</h2>
                    <h3>Precio</h3>
                    <p>
                        2.00€
                    </p>
                    <img src={Coca.src} alt="coca-cola">
                </article>
                <article>
                    <h2>Nestea Mango-Piña:</h2>
                    <h3>Precio</h3>
                    <p>
                        1.90€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Fanta Naranja:</h2>
                    <h3>Precio</h3>
                    <p>
                        2.00€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Lipton:</h2>
                    <h3>Precio</h3>
                    <p>
                        1.50€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Coca-Cola Zero:</h2>
                    <h3>Precio</h3>
                    <p>
                        2.15€
                    </p>
                    <div id="imagen"></div>
                </article>
            </div>
            <div>
                <h1 id="te">Té</h1>
                <article>
                    <h2>Té Blanco:</h2>
                    <h3>Precio</h3>
                    <p>
                        4.30€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Té Verde:</h2>
                    <h3>Precio</h3>
                    <p>
                        4.85€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Té Negro:</h2>
                    <h3>Precio</h3>
                    <p>
                        5.50€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Tila</h2>
                    <h3>Precio</h3>
                    <p>
                        3.65€
                    </p>
                    <div id="imagen"></div>
                </article>
                <article>
                    <h2>Menta Poleo:</h2>
                    <h3>Precio</h3>
                    <p>
                        3.20€
                    </p>
                    <div id="imagen"></div>
                </article>
            </div>
            <div>
                <h1 id="batidos">Batidos</h1>
            </div>
            <div>
                <h1 id="alcohol">Alcohol</h1>
            </div>
            <div>
                <h1 id="agua">Agua</h1>
            </div>
        </section>
    </main>

    <style>

        @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

        main{
            position: relative;
            top: 80px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }

        #select{
            display: flex;
            flex-direction: column;
            box-shadow: 5px 0 5px black;
            width: 25%;
            height: 84vh;
            position: fixed;
            z-index: 1;
            background-color: #13151a;
        }

        #select button{
            border: none;
            margin: 40px;
            padding: 10px;
            background: linear-gradient(to right, #f08ae3, #5ac2a3 50%);
            border-radius: 10px;
            transition: scale 0.3s ease-out, box-shadow 0.5s ease-in-out;
        }

        #select button:hover{
            scale: 1.1;
            box-shadow: -5px 5px 5px #cfadd5;
        }

        #select button a{
            text-decoration: none;
            font-family: "Rajdhani", sans-serif;
            color: white;
            font-size: 50px;
            font-weight: bold;
        }

        .present img{
		    width: 90%;
            filter: opacity(50%);
            position: relative;
		    z-index: 0;
		    animation: up 2.5s infinite ease-out;
		    transition: scale  2s ease-out;
            top: -50px;
	    }

        @keyframes up {
            0%{
                translate: 0 -10px;
            }
            25%{
                translate: 0 -20px;
            }
            50%{
                translate: 0 -25px;
            }
            75%{
                translate: 0 -20px;
            }
            100%{
                translate: 0 -10px;
            }
	    }

        .visible{
		    position: absolute;
		    top: 20%;
		    left: 25%;
		    color: white;
		    font-size: 150px;
		    animation: roll 3s infinite ease-in;
            text-transform: uppercase;
	    }   

        #selection{
            position: absolute;
            right: 15%;
            width: 50%;
            color: white;
            font-family: "Rajdhani", sans-serif;
        }

        article img{
            float: left;
            width: 20%;
        }

    </style>
</Layout>