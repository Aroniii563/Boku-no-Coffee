---
import Logo from "../img/logotipo.png";
---

<body>
    <header>
        <header>
			<div>
                <a href="/"><img src={Logo.src} alt="logo"></a>
            </div>
            <nav>
                <button><a href="/">Inicio</a></button>
                <button><a href="/productos">Productos</a></button>
                <button><a href="/servicios">Servicios</a></button>
                <button><a href="/contacto">Contacto</a></button>
            </nav>
		</header>
    </header>
</body>

<style>

    header{
        display: flex;
        justify-content: center;
        box-shadow: 0 1px 10px #F495E0;
        position: fixed;
        width: 100%;
        left: 0;
        top: 0;
    }

    div img{
		width: 5%;
		filter: drop-shadow(1.5px 1.5px 3px #F495E0);
        padding: 10px 25px 10px 10px;
        transition: scale 0.3s ease-in-out;
	}

    div img:hover{
        scale: 1.5;
        rotate: -10deg;
        filter: drop-shadow(0.5px 1.5px 5px #F495D0);
    }
    
    nav{
        flex-wrap: wrap;
    }

    nav button{
        background-color: aqua;
        border-radius: 25px;
        font-size: 25px;
        width: 30%;
    }

    nav button:hover{
        background-color: transparent;
    }

    nav button a{
        color: black;
        padding: 10px;
        text-decoration: none;
    }

    nav button a:hover{
        color: white;
    }

</style>